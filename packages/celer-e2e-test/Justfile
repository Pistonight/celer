lint:
    pylint scripts

build:
    @just ../../buildrs --release

test FAILONLY="": build
    python3 scripts/e2e.py test ../../../../../target/release/celer-devtool {{FAILONLY}}

run-test TEST: build
    python3 scripts/e2e.py test ../../../../../target/release/celer-devtool -t {{TEST}}

clean:
    python3 scripts/e2e.py clean

alias r:=run-test
