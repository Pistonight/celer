lint:
    pylint scripts

build EXT="":
    @just ../../buildrs --release
    cp ../../target/release/celer-devtool{{EXT}} celer{{EXT}}

test EXT="":
    @just build {{EXT}}
    python3 scripts/e2e.py test ./celer{{EXT}}

run-test TEST EXT="":
    @just build {{EXT}}
    python3 scripts/e2e.py test ./celer{{EXT}} -t {{TEST}}

run-config TEST CONFIG EXT="":
    @just build {{EXT}}
    python3 scripts/e2e.py test ./celer{{EXT}} -t {{TEST}} -c {{CONFIG}}

clean:
    python3 scripts/e2e.py clean

clean-test TEST:
    python3 scripts/e2e.py clean -t {{TEST}}

alias r:=run-test
alias c:=run-config

diff TEST CONFIG FILE:
    diff tests/{{TEST}}/test_output/{{CONFIG}}/expected/{{FILE}} tests/{{TEST}}/test_output/{{CONFIG}}/actual/{{FILE}}
