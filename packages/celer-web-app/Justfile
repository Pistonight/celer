install:
    npm install

ci:
    npm ci

lint:
    pylint scripts/validateimport.py
    python3 scripts/validateimport.py src
    npm run lint

lint-fix:
    npm run lint -- --fix

build:
    rm -rf src/data/wasmlib
    @just ../celer-lib/apply
    wget -O binaryen.tar.gz https://github.com/WebAssembly/binaryen/releases/download/version_105/binaryen-version_105-x86_64-linux.tar.gz
    mkdir -p bin
    tar -xzvf binaryen.tar.gz -C bin
    ./bin/binaryen-version_105/bin/wasm-opt src/data/wasmlib/celer_bg.wasm -O3 -o src/data/wasmlib/tmp.wasm
    mv -f -T src/data/wasmlib/celer_bg.wasm src/data/wasmlib/celer_bg_unoptimized.wasm
    mv -f -T src/data/wasmlib/tmp.wasm src/data/wasmlib/celer_bg.wasm
    npm run build

watch:
    npm run start

release: build
    mkdir -p ../../release
    cp -R -T build ../../release/celer-web-app

clean:
    rm -rf build
    rm -rf src/data/wasmlib

nuke: clean
    rm -rf node_modules
